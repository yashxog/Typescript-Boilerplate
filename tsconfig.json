{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "commonjs",
    "target": "ESNext",
    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}